@{
}
@{
    ViewData["Title"] = "Chỉnh sửa Task";
    var id = ViewBag.Id;
    var task = ViewBag.Task;
}

<h2>@ViewData["Title"]</h2>

<form method="post" asp-action="Edit">
    <input type="hidden" name="id" value="@id" />
    <div class="form-group">
        <label for="task">Nội dung công việc</label>
        <input type="text" name="task" value="@task" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success mt-3">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Hủy</a>
</form>
