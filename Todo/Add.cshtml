@{
}@{
    ViewData["Title"] = "Thêm Task Mới";
}

<h2>@ViewData["Title"]</h2>

<form method="post" asp-action="Add">
    <div class="form-group">
        <label for="task">Nội dung công việc</label>
        <input type="text" name="task" class="form-control" placeholder="Nhập nội dung task..." required />
    </div>
    <button type="submit" class="btn btn-success mt-3">Thêm</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Hủy</a>
</form>
